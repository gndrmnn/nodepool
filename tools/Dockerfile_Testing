FROM ubuntu:22.04

ARG DEBIAN_FRONTEND=noninteractive

RUN apt-get update -y \
  && apt-get upgrade -y \
  && apt-get install -y python3.11 \
  && apt-get install -y python3-pip \
  && apt-get install -y python3.11-dev

COPY bindep.txt /tmp
RUN python3.11 -m pip install nox bindep

RUN bindep --brief -f /tmp/bindep.txt test | xargs apt-get install -y

SHELL ["/bin/bash", "-c"]

WORKDIR /nodepool

ENTRYPOINT ["/bin/bash"]
